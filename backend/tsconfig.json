{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "sourceMap": true
  },
  "include": [
    "src/main.ts",
    "src/app.ts",
    "src/prisma.ts",
    "src/middleware/**/*.ts",
    "src/routes/**/*.ts",
    "src/services/**/*.ts",
    "src/types/**/*.d.ts",
    "src/scripts/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
