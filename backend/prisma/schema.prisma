generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String
  role          String   @default("USER")
  createdAt     DateTime @default(now())
  refreshTokens RefreshToken[]
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
}

model Server {
  id           String    @id @default(cuid())
  name         String
  port         Int       @unique
  rconPort     Int
  rconPassword String
  version      String
  maxRam       Int
  status       String    @default("STOPPED")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  players      Player[]
  backups      Backup[]
  metrics      Metric[]
}

model Player {
  id        String   @id @default(cuid())
  name      String
  uuid      String   @unique
  serverId  String
  server    Server   @relation(fields: [serverId], references: [id], onDelete: Cascade)
  isOnline  Boolean  @default(false)
  lastSeen  DateTime @default(now())
  createdAt DateTime @default(now())

  @@index([serverId])
}

model Backup {
  id        String   @id @default(cuid())
  serverId  String
  server    Server   @relation(fields: [serverId], references: [id], onDelete: Cascade)
  filename  String
  size      BigInt
  createdAt DateTime @default(now())

  @@index([serverId])
}

model Metric {
  id        String   @id @default(cuid())
  serverId  String
  server    Server   @relation(fields: [serverId], references: [id], onDelete: Cascade)
  cpuUsage  Float
  ramUsage  Float
  tps       Float
  players   Int
  timestamp DateTime @default(now())

  @@index([serverId, timestamp])
}
