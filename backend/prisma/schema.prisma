datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String
  role          String   @default("USER")
  createdAt     DateTime @default(now())
  refreshTokens RefreshToken[]
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
}

model Server {
  id            String    @id @default(cuid())
  name          String
  path          String
  port          Int       @unique
  rconPort      Int       @unique
  rconPassword  String
  version       String
  maxRam        Int
  javaArgs      String    @default("-XX:+UseG1GC -XX:+ParallelRefProcEnabled")
  status        String    @default("STOPPED")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  players       Player[]
  backups       Backup[]
  metrics       Metric[]
}

model Player {
  id        String   @id @default(cuid())
  name      String
  uuid      String   @unique
  serverId  String
  server    Server   @relation(fields: [serverId], references: [id], onDelete: Cascade)
  isOnline  Boolean  @default(false)
  lastSeen  DateTime @default(now())
  createdAt DateTime @default(now())

  @@index([serverId])
}

model Backup {
  id        String   @id @default(cuid())
  serverId  String
  server    Server   @relation(fields: [serverId], references: [id], onDelete: Cascade)
  filename  String
  path      String
  size      BigInt
  createdAt DateTime @default(now())

  @@index([serverId])
}

model Metric {
  id        String   @id @default(cuid())
  serverId  String
  server    Server   @relation(fields: [serverId], references: [id], onDelete: Cascade)
  cpuUsage  Float
  ramUsage  Float
  players   Int
  timestamp DateTime @default(now())

  @@index([serverId, timestamp])
}

model AuditLog {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  userId    String
  action    String
  details   String?
  ipAddress String?
}
