# Database Configuration
POSTGRES_USER=mc_admin
POSTGRES_PASSWORD=change_me_secure_password
POSTGRES_DB=mc_panel
DATABASE_URL=postgresql://mc_admin:change_me_secure_password@db:5432/mc_panel

# Backend Configuration
PORT=5829
NODE_ENV=production
JWT_SECRET=change_me_jwt_secret_min_32_chars
JWT_REFRESH_SECRET=change_me_refresh_secret_min_32_chars
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d
ENCRYPTION_KEY=change_me_encryption_key_32_chars

# Frontend Configuration
VITE_API_URL=http://localhost:5829
VITE_WS_URL=ws://localhost:5829

# Default Admin Account (created on first run)
ADMIN_EMAIL=admin@mcpanel.local
ADMIN_PASSWORD=admin123

# WebDAV Cloud Backup (Optional)
WEBDAV_URL=https://your-nextcloud.com/remote.php/dav/files/username/
WEBDAV_USERNAME=your_username
WEBDAV_PASSWORD=your_password
WEBDAV_REMOTE_PATH=/minecraft-backups

# Optional: Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
